{
	"compileOnSave": false,
	"exclude": ["tools/**/*"],
	"compilerOptions": {
		"skipLibCheck": true,
		"baseUrl": "./",
		"downlevelIteration": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "es2020",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018", "dom"],
		"paths": {
			"@my-ul/ng-porcelain": ["projects/ng-porcelain/src"],
			"@my-ul/ng-porcelain/*": ["projects/ng-porcelain/src/*"]
		}
	},
	"angularCompilerOptions": {
		"strictTemplates": true,
		"enableIvy": false
	}
}
